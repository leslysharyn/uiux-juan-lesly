<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginTop="0dp"
    tools:context=".AlarmActive">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/logoM"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="78dp"
                android:layout_height="46dp"
                android:layout_weight="2"
                android:src="@drawable/logomediaalarm2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="2"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="left|center_vertical"
                android:text="@string/app_name"
                android:textColor="@color/MediaAlarmRed"
                android:textSize="40sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/logoM">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:useDefaultMargins="true"
                    android:columnCount="1">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image23"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/image14"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:background="@color/white"
                        android:id="@+id/tusAlarmas"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Recuerda Tomar tu pastilla"
                        android:paddingTop="3dp"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/apagaralarma"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:background="@color/white"
                        android:id="@+id/ApagarAlarmas"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/segoeui"
                        android:text="Apagar Alarma"
                        android:paddingTop="3dp"
                        android:textColor="#000000"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/menosSnooze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#000000"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:background="@color/white"/>

                    <Button
                        android:id="@+id/snooze_button"
                        android:layout_width="120dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_row="0"
                        android:background="@color/background"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="Repetir 5 min"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#201F1E"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/masSnooze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/segoeui"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#000000"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:background="@color/white"/>
                </GridLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>